{{#if error}}
    <div class="alert alert-danger">
        {{{error}}}
    </div>
{{/if}}

{{outlet}}

<div class="modal modal-signin fade">
    <div class="modal-dialog">
        <form class="modal-content" {{action "signin" username password on="submit"}}>
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Sign in</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label>Username</label>
                    {{input class="form-control" placeholder="username" value=username}}
                </div>
                <div class="form-group {{if password_error "has-error"}}">
                    <label>Password</label>
                    {{input type="password" class="form-control" placeholder="password" value=password}}
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary">Sign in</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </form>
    </div>
</div>
